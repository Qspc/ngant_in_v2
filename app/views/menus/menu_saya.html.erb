<h1>Menu <%= current_warung.nama %></h1>

<div class="panel">
	<div class="panel-responsive">
		<% current_warung.menus.each do |menu| %>
		<div class="row">
			<div class="row">
				<div class="col-md-4 col-md-offset-1">
					<%= image_tag menu.image.variant(resize_to_fit: [400, 600]), class: 'image-responsive', id: 'image' %>
					<h3><%= link_to menu.nama, edit_menu_path(@menu), class: 'btn btn-lg btn-link' %><h3>
					<div id="menu">Rp.<%= menu.harga %></div>
				</div>
			</div>
		</div>
		<% end -%>
	</div>
</div>